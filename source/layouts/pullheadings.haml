- content_for :tail do
  :coffee
    $ ->
      # Emulate MediaWiki's mw-headline class for visual effects on the front page
      $('h2').wrapInner('<span class="mw-headline"/>')

~ wrap_layout :layout do

  %section#bodyContent
    .bg-boxes.bg-boxes-single
      .row
        .block-heading
          = yield
